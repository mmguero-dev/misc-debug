{
    "variables": {
    "aws_access_key": "${aws_access_key}",
    "aws_secret_key": "${aws_secret_key}",
    "vpc_region": "${vpc_region}",
    "instance_type": "${instance_type}",
    "ssh_username": "${ssh_username}",
    "vpc_tag_name_filter": "${vpc_tag_name_filter}",
    "vpc_subnet_tag_name_filter": "${vpc_subnet_tag_name_filter}",
    "vpc_security_group_tag_name_filter": "${vpc_security_group_tag_name_filter}"

  },
    "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `vpc_region`}}",
      "vpc_filter": {
       "filters": {
        "tag:Name": "{{user `vpc_tag_name_filter`}}",
        "isDefault": "false"
        }
      },
      "subnet_filter": {
       "filters": {
        "tag:Name": "{{user `vpc_subnet_tag_name_filter`}}"
        }
      },
      "associate_public_ip_address": true,
      "security_group_filter": {
       "filters": {
        "tag:Name": "{{user `vpc_security_group_tag_name_filter`}}"
        }
      },
      "source_ami_filter": {
        "filters": {
         "architecture": "x86_64",
         "virtualization-type": "hvm",
         "name": "amzn2-ami-kernel-5.10-hvm-*-x86_64-gp2",
         "root-device-type": "ebs"
        },
        "owners": [
         "137112412989"
        ],
        "most_recent": true
       },
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "malcolm-amzn2_v1-{{isotime | clean_resource_name}}"
    }
  ],
  "provisioners": [
    {
     "type": "shell",
     "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
     "script": "./scripts/Malcolm_AMI_Setup.sh"
  }
  ]
}